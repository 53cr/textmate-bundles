	/*--------------------------------------------------------------------------
	
	SHOW INVISIBLES HACK
	====================
	Version 0.3 (Eric Hsu, textmate@betterfilecabinet.com) 
	http://math.sfsu.edu/hsu/textmate
	
	- Made colors subtler.
	- Restricted Gremlins to non-printing characters 00-20,80-A0.
	--------------------------------------------------------------------------*/
	
	name = "Show Invisibles";
	fileTypes = ( );
	foldingStartMarker = "";
	foldingStopMarker = "";
		
	foregroundColor = "#000000";
	backgroundColor = "#ffffff";
	patterns = (
		
		/* language stuff */
		
		{ name = "invisibles.tabs";	backgroundColor = "#E2FDFF";	fontStyle = (  ); 	match = "\t"; },
		{ name = "invisibles.spaces"; backgroundColor = "#FFE4FA"; match = " "; },
		{ name = "invisibles.gremlins"; backgroundColor = "#FF4A3F"; match = "[^\t\\x20-\\x7E]"; },		
	);  
	
}