{
	name = "NAnt Build File";
	scopeName = "source.nant-build";
	uuid = "1BA72668-707C-11D9-A928-000D93589AF6";
	
	fileTypes = ( build );
	foldingStartMarker = "<[^!?/>]+|<!--";
	foldingStopMarker = "/>|</[^?>]+|-->";
	increaseIndentPattern = "<[^/>]*>\\s*$";
	foregroundColor = "#333333";
	backgroundColor = "#ffffff";

	smartTypingPairs = (
	    ( "(", ")" ),
		( "[", "]" ),
		( "{", "}" ),
		( "\"", "\"" ),
	);

	highlightPairs = (
	    ( "(", ")" ),
		( "[", "]" ),
		( "{", "}" ),
		( "\"", "\"" ),
		( "<", ">" ),
	);

	patterns = (
		/* comments */
		{
			name = "comment.block.nant";
			begin = "<!--";
			end = "-->";
			foregroundColor = "red";
		},
		
		/* nodes */
		{
			name = "declaration.tag.nant";
			begin = "</?([-_a-zA-Z0-9:]+)"; end = "/?>";
			captures = {
			    1 = { name = "entity.name.tag.nant"; };
			};
			
			patterns = (
	  			{ name = "entity.other.attribute-name.nant"; match = " ([a-zA-Z\-]+)"; },
	  			{ name = "string.quoted.double.nant"; begin = "\""; end = "\"";  foregroundColor = "#CC3300";},
				{ name = "string.quoted.single.nant"; begin = "'"; end = "'"; fontStyle = (  ); foregroundColor = "#CC3300";	},
			);
		},

		/* entities */
		{ name = "constant.character.entity.nant"; match = "&([a-zA-Z]+|#[0-9]+|#x[0-9a-fA-F]+);"; foregroundColor = "#6600CC"; },
		{ name = "invalid.illegal.bad-ampersand.nant"; match = "&"; backgroundColor = "#CC3300"; foregroundColor = "#ffffff"; },
	);
